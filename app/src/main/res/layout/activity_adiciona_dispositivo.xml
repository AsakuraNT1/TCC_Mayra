<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_energy"
    tools:context=".AdicionaDispositivo">


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="407dp"
        android:layout_height="147dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivProjeto"
                android:layout_width="71dp"
                android:layout_height="83dp"
                android:layout_column="1"
                android:layout_gravity="start|center_horizontal"
                android:maxWidth="12dp"
                android:src="@drawable/ic_plug_foreground" />

            <EditText
                android:id="@+id/etNome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="start|center_vertical"
                android:hint="Forneça o nome do Dispositivo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="#9553F6C8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDeadline"
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:layout_column="1"
                android:layout_gravity="start"
                android:src="@drawable/ic_http_foreground" />

            <EditText
                android:id="@+id/etIP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="start|center_vertical"
                android:hint="Forneça o IP do Dispositivo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="#9553F6C8" />

        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/btnProjectOK"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:onClick="OnClickEnter"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>